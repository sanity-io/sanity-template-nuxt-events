{
  "version": 1,
  "title": "Events with Nuxt.js",
  "description": "Data-driven conference website in Vue.js. Speakers, sessions, and scheduling.",
  "previewMedia": {
    "type": "image",
    "src": "assets/frontend.jpg",
    "alt": "A screenshot of the Events with Nuxt.js application."
  },
  "technologies": [
    {
      "id": "nuxt",
      "name": "Nuxt.js",
      "url": "https://nuxtjs.org/"
    },
    {
      "id": "netlify",
      "name": "Netlify",
      "url": "https://www.netlify.com/"
    }
  ],
  "deployments": [
    {
      "id": "studio",
      "type": "studio",
      "title": "Sanity Studio",
      "description": "The Sanity Studio is where you edit and structure your content.",
      "dir": "./studio",
      "requiredTokens": [
        {
          "role": "deploy-studio",
          "label": "GraphQL API Deployer"
        }
      ],
      "provider": {
        "name": "netlify",
        "config": {
          "base": "/studio",
          "dir": "/dist",
          "cmd": "SANITY_AUTH_TOKEN=$SANITY_DEPLOY_STUDIO_TOKEN npm run graphql-deploy && npm run build && cp ./netlify.toml ./dist"
        }
      },
      "previewMedia": {
        "type": "image",
        "src": "assets/studio-00.png",
        "alt": "A mock preview image"
      }
    },
    {
      "id": "web",
      "type": "web",
      "title": "Events Website",
      "description": "A bare-bones events website that you can use as a starting point for your next event.",
      "dir": "./web",
      "provider": {
        "name": "netlify",
        "requirements": ["build-hook"],
        "config": {
          "base": "/web",
          "dir": "/dist",
          "cmd": "npm run build"
        }
      },
      "previewMedia": {
        "type": "image",
        "src": "assets/frontend.jpg",
        "alt": "A mock preview image"
      },
      "requiredCorsOrigins": [
        {
          "origin": "http://localhost:3000",
          "allowCredentials": false
        }
      ]
    }
  ]
}
